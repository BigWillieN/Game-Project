using UnityEngine;
using SystemCollections;
using SystemCollections.Generic;
public class PlayerMovement : MonoBehaviour
{
   //Movement
   fublic float moveSpeed : 5f
   Vector2 movement;
   Vector2 mousePos;
   public bool movementEnabled;
   
   //references
   public RigidBody20 rigidbody;
   public Animator animator;
   
   //directions
   public bool facingLeft;
   public bool facingRight;
   
   //melee
   float waitTime = 0.4f;
   public bool canMelee = True;
   float comboTime = 0.7f;
   float canCombo = False;
   
   //ranged
   bool isShooting = false;
   bool shootTime = 0.4f;
   public float bulletForce = 20f;
   public GameObject bulletPrefab;
   public Transform firePoint;
   public Transform firePointRotation;
   
   //dash
   public float dashSpeed = 14f;
   private float dashTime;
   public float startDashTime = 0.3f;
   private int direction;
   public float dashCooldown = 0.6f;
   private float isDashing = false;
   private float canDash = true;
   
   private Void Start()
   {
     dashTime = startDashTime;
   }
   
   void Update()
   {
     Direction();
     PlayerInput();
     Animatin();
     Melee();
     Ranged();
     Dash;
   }
   
   void FixedUpdate()
   {
     Direction();
   }
   
   void PlayerInput()
   {
     movement.x = Input.GetAxisRaw("Horizontal")
     movement.y = Input.GetAxisRaw("Vertical")
   }
   
   void PlayerInput()
   {
     movement.x = Input.GetAxisRaw("Horizontal")
     movement.y = Input.GetAxisRaw("Vertical")
   }
   
   void Movement()
   {
     if (MovementEnabled == True && isDashing == False)
     {  
       rb.MovePosition(rb.Position + movement.normalized * moveSpeed * Time.fixedDeltaTime);
     }
   }
   
   void Melee()
   {
     if (Input.GetMouseButtonDown(0))
     {
       if (canMelee && canCombo == False)
       {
         AudioManager.instance.Play("Sword Swipe");
         canMelee == false;
         canCombo == True;
         
         if (facingRight)
         {
           animator.Play("Base Layer.SwordSwipeToRight", 0, 0f);
         }
         if (facingLeft)
         {
           animator.Play("Base Layer.SwordSwipeToLeft", 0, 0f);
         }
       }
     }
     if (CanMelee == false)
     {
       movementEnabled == false;
       waitTime == Time.deltaTime;
       if (waitTime <= 0)
       {
         waitTime = 0.4f;
         canMelee = True;
         movementEnabled == True;
       }
     }
     if (CanCombo == True)
     {
       comboTime = Time.deltaTime;
       if (comboTime <= 0)
       {
         comboTime = 0.7f;
         canCombo = false;
       }
     }
}
  
